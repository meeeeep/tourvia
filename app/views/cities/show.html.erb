<h1><%= @city.name %></h1>
<%= link_to image_tag('http://lorempixel.com/800/400/food/1') %>

<%= link_to "New Post", new_city_post_path(@city), class: "waves-effect waves-light btn" %>

<!-- loops through and displays info for each city post -->
<% @city.posts.each do |post| %>

    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><%= post.title %></span>
                    <p><%= time_ago_in_words post.created_at.to_datetime %>
                        ago</p>
                    <p><%= post.body %></p>
                </div>
                <div class="card-action">
                    <%= link_to 'Edit', edit_city_post_path(@city.id, post.id) %>
                    <%= link_to 'Delete', city_post_path(@city.id, post.id),
                          method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        </div>
    </div>
<% end %>
